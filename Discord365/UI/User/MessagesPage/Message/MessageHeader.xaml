<UserControl x:Class="Discord365.UI.User.MessagesPage.Message.MessageHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:user="clr-namespace:Discord365.UI.User"
             xmlns:local="clr-namespace:Discord365.UI.User.MessagesPage.Message"
             mc:Ignorable="d" Foreground="#B2FFFFFF">
    <Grid>
        <user:UserAvatar x:Name="Avatar" Height="42" Width="42" HorizontalAlignment="Left" VerticalAlignment="Top"></user:UserAvatar>
        <WrapPanel Orientation="Horizontal" Margin="62,4,0,0" HorizontalAlignment="Left"  VerticalAlignment="Top">
            <user:UserNameUpdateable x:Name="User" HorizontalAlignment="Left"  VerticalAlignment="Top" ></user:UserNameUpdateable>
            <TextBlock x:Name="tbTimeStamp" Margin="5,0,0,0" Text="15.01.2002 10:10:10" VerticalAlignment="Center" Foreground="#19FFFFFF"></TextBlock>
        </WrapPanel>
    </Grid>
</UserControl>
