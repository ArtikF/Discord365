<UserControl x:Class="Discord365.UI.User.MessagesPage.Message.AttachmentContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Discord365.UI.User.MessagesPage.Message"
             mc:Ignorable="d" 
             Height="62" MaxWidth="521">
    <Grid>
        <Rectangle RadiusY="5" RadiusX="5" Fill="#1E000000" Stroke="#38000000"></Rectangle>
        <Grid x:Name="Icon" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="13,0,0,0" Width="28" Height="35" Background="#14FFFFFF"></Grid>
        <TextBlock x:Name="tbFileName" FontSize="16" VerticalAlignment="Center" Text="File Name" HorizontalAlignment="Stretch" Margin="51,-23,56,0" TextWrapping="NoWrap" Foreground="#FF00ACEE"></TextBlock>
        <TextBlock x:Name="tbFileSize" FontSize="12" VerticalAlignment="Center" Text="245 kb" HorizontalAlignment="Stretch" Margin="51,18,56,0" TextWrapping="NoWrap" Foreground="#26FFFFFF"></TextBlock>
        <Button x:Name="btnDownload" Click="BtnDownload_Click" HorizontalAlignment="Right" VerticalAlignment="Center" Width="25" Height="25" Margin="0,0,13,0"></Button>
    </Grid>
</UserControl>
