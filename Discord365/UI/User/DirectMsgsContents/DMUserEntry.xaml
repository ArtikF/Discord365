<UserControl x:Class="Discord365.UI.User.DirectMsgsContents.DMUserEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Discord365.UI.User.DirectMsgsContents"
             xmlns:user="clr-namespace:Discord365.UI.User"
             mc:Ignorable="d" Width="224" Height="40">
    <Grid>
        <Rectangle x:Name="rectBackground" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"  RadiusY="9" RadiusX="9" Fill="#00000000"></Rectangle>
        <user:UserAvatar x:Name="Avatar" Width="33" Height="33" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="8,0,0,0"></user:UserAvatar>
        <user:UserNameUpdateable x:Name="User" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="48,0,8,0"></user:UserNameUpdateable>
    </Grid>
</UserControl>
