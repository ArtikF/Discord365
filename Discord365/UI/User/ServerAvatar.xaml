<UserControl x:Class="Discord365.UI.User.ServerAvatar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Discord365.UI.User"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50" IsHitTestVisible="False">
    <Grid>
        <Label x:Name="AvatarText" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Content="SNM" Foreground="White"></Label>
        <Rectangle RadiusY="25" RadiusX="25">
            <Rectangle.Fill>
                <ImageBrush x:Name="AvatarImage"/>
            </Rectangle.Fill>
        </Rectangle>
    </Grid>
</UserControl>
