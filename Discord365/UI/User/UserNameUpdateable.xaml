<UserControl x:Class="Discord365.UI.User.UserNameUpdateable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Discord365.UI.User"
             mc:Ignorable="d" Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">
    <Grid>
        <WrapPanel x:Name="panel" Orientation="Vertical">
            <TextBlock x:Name="tbUser" HorizontalAlignment="Stretch" TextWrapping="NoWrap" Text="User Or Group" VerticalAlignment="Top" Foreground="White"/>
            <TextBlock x:Name="tbAdditional" HorizontalAlignment="Stretch" TextWrapping="NoWrap" Text="Additional Information" VerticalAlignment="Top" Foreground="#26FFFFFF" FontSize="8" FontWeight="Bold"/>
        </WrapPanel>
    </Grid>
</UserControl>
