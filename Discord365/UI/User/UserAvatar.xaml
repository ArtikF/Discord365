<UserControl x:Class="Discord365.UI.User.UserAvatar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Discord365.UI.User"
             mc:Ignorable="d" 
             d:DesignHeight="31" d:DesignWidth="31" Cursor="Hand">
    <Grid>
        <Rectangle RadiusY="15.5" RadiusX="15.5">
            <Rectangle.Fill>
                <ImageBrush x:Name="AvatarImage"/>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle x:Name="UserStatusRect" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="10" Height="10" Fill="#FF509540" RadiusY="5" RadiusX="5"/>
    </Grid>
</UserControl>
