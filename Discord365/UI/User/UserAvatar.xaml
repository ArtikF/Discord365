<UserControl x:Class="Discord365.UI.User.UserAvatar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Discord365.UI.User"
             mc:Ignorable="d" 
             d:DesignHeight="33" d:DesignWidth="33" Cursor="Hand" Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">
    <Grid>
        <Rectangle RadiusY="15.5" RadiusX="15.5" Margin="0,0,2,2">
            <Rectangle.Fill>
                <ImageBrush x:Name="AvatarImage"/>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle x:Name="UserStatusBorder" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="14" Height="14" Fill="#FF2F3136" RadiusY="7" RadiusX="7"/>
        <Rectangle x:Name="UserStatusRect" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="10" Height="10" Fill="#FF509540" RadiusY="5" RadiusX="5" Margin="0,0,2,2"/>
    </Grid>
</UserControl>
