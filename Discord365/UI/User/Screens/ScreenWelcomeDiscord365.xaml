<UserControl x:Class="Discord365.UI.User.Screens.ScreenWelcomeDiscord365"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Discord365.UI.User.Screens"
             xmlns:user="clr-namespace:Discord365.UI.User"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <WrapPanel Orientation="Vertical">
            <TextBlock Foreground="#A5FFFFFF" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18">Welcome to Discord 365!</TextBlock>
            <user:GitHubIssuesCtrl Height="240" Margin="0,8,0,0"></user:GitHubIssuesCtrl>
        </WrapPanel>
    </Grid>
</UserControl>
