<UserControl x:Class="Discord365.UI.MarkdownTextBox.MarkdownBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Discord365.UI.MarkdownTextBox"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    
    <Grid>
        <RichTextBox x:Name="tbMessage" Style="{DynamicResource MessageRichTextBox}" HorizontalAlignment="Left" Margin="-2,0,0,0" IsReadOnly="True" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Disabled" IsReadOnlyCaretVisible="False" VerticalAlignment="Top" Foreground="#8CFFFFFF" Background="#00000000" BorderBrush="#00ABADB3">
        </RichTextBox> 
    </Grid>
</UserControl>
