<Window x:Class="Discord365.UI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Discord365.UI"
        mc:Ignorable="d"
        Title="Discord365: Login" Height="450" Width="800" Foreground="Black" Background="#FF202225">
    <Grid>
        <Label Content="Token:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Foreground="White"/>
        <TextBox x:Name="tbToken" HorizontalAlignment="Left" Height="23" Margin="10,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="442"/>
        <RadioButton Content="Bot" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top" Foreground="White" IsChecked="True"/>
        <Button x:Name="btnLogin" Content="Log In" HorizontalAlignment="Left" Margin="10,84,0,0" VerticalAlignment="Top" Width="74" Click="BtnLogin_Click"/>

    </Grid>
</Window>
